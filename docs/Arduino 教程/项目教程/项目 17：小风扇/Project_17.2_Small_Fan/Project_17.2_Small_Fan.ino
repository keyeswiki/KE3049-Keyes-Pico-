void setup() {
  
  pinMode(22, OUTPUT); // 初始化引脚22作为输出.
}

void loop() {
  digitalWrite(22, LOW);   // 启动电机(LOW表示低电平)
  delay(4000);              // 延迟4秒
  digitalWrite(22, HIGH);    // 提高电压，关掉电机
  delay(2000);              // 延迟2秒
}
