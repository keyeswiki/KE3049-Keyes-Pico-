void setup() {
  
  pinMode(22, OUTPUT); // 初始化引脚22作为输出.
}

void loop() {
  digitalWrite(22, HIGH);   // 启动电机(HIGH表示高电平)
  delay(4000);              // 延迟4秒
  digitalWrite(22, LOW);    // 降低电压，关闭电机
  delay(2000);              // 延迟2秒
}
